<UserControl x:Class="NVRAMTuner.Client.Views.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NVRAMTuner.Client.Views"
             xmlns:enums="clr-namespace:NVRAMTuner.Client.Models.Enums"
             xmlns:vm="clr-namespace:NVRAMTuner.Client.ViewModels"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:HomeViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="30"
             d:DesignWidth="800">

    <Menu>
        <MenuItem Header="_File">
            <MenuItem Header="Connect to router..."
                      Command="{Binding LoadRouterFromDiskCommand}">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="RouterWireless" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Disconnect from router">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="RouterWirelessOff" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Setup new router"
                      Command="{Binding EnterSetupCommand}">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="PlusNetwork" />
                </MenuItem.Icon>
            </MenuItem>
            <Separator />
            <MenuItem Header="Exit">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="ExitRun" />
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>
        <MenuItem Header="_Tools">
            <MenuItem Header="Dump live NVRAM contents to file...">
                <MenuItem.Icon>
                    <iconPacks:PackIconFontisto Kind="Save" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Dump edited NVRAM contents to file...">
                <MenuItem.Icon>
                    <iconPacks:PackIconFontisto Kind="Save" />
                </MenuItem.Icon>
            </MenuItem>
            <Separator />
            <MenuItem Header="Options">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="Cog" />
                </MenuItem.Icon>
                <MenuItem Header="Themes">
                    <MenuItem.Icon>
                        <iconPacks:PackIconMaterial Kind="ThemeLightDark" />
                    </MenuItem.Icon>
                    <MenuItem Header="Sync with OS" 
                              Command="{Binding ChangeThemeCommand}"
                              CommandParameter="{x:Static enums:ApplicationTheme.SyncWithOs}"/>
                    <MenuItem Header="Dark blue"
                              Command="{Binding ChangeThemeCommand}"
                              CommandParameter="{x:Static enums:ApplicationTheme.DarkBlue}"/>
                    <MenuItem Header="Dark orange"
                              Command="{Binding ChangeThemeCommand}"
                              CommandParameter="{x:Static enums:ApplicationTheme.DarkOrange}"/>
                    <MenuItem Header="Match OS"/>
                </MenuItem>
            </MenuItem>
        </MenuItem>
        <MenuItem Header="_Help">
            <MenuItem Header="View source" Command="{Binding ViewSourceMenuCommand}">
                <MenuItem.Icon>
                    <iconPacks:PackIconFontAwesome Kind="GithubBrands" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Submit bug report" Command="{Binding ReportBugMenuCommand}">
                <MenuItem.Icon>
                    <iconPacks:PackIconBoxIcons Kind="RegularBug" />
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Header="About" Click="AboutMenuItem_OnClick">
                <MenuItem.Icon>
                    <iconPacks:PackIconPicolIcons Kind="BadgeInformation" />
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>
    </Menu>

</UserControl>
