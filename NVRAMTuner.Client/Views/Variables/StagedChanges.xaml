<UserControl x:Class="NVRAMTuner.Client.Views.Variables.StagedChanges"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NVRAMTuner.Client.Views.Variables"
             xmlns:viewModels="clr-namespace:NVRAMTuner.Client.ViewModels.Variables"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewModels:StagedChangesViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0">
            <Run Text="Staged changes:" />
            <Run Text="{Binding VariableDeltas.Count, Mode=OneWay}" />
        </TextBlock>

        <ListView Grid.Row="1" ItemsSource="{Binding VariableDeltas}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Original.Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <UniformGrid Grid.Row="2" Rows="1">
            <Button Content="Clear staged" />
            <Button Content="Commit" />
        </UniformGrid>
    </Grid>
</UserControl>
